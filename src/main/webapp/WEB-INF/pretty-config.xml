<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="fieldBean">
        <pattern value="/fields"/>
        <view-id value="/field.xhtml"/>
    </url-mapping>
    <url-mapping id="mainBean">
        <pattern value="/"/>
        <view-id value="/home.xhtml"></view-id>
    </url-mapping>
    <url-mapping id="responseBean">
        <pattern value="/responses"></pattern>
        <view-id value="/response.xhtml"></view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/login"></pattern>
        <view-id value="/login.xhtml"></view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/registration"></pattern>
        <view-id value="/registration.xhtml"></view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/profile"></pattern>
        <view-id value="/editProfile.xhtml"></view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/changePassword"></pattern>
        <view-id value="/changePassword.xhtml"></view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/forgotPassword"></pattern>
        <view-id value="/forgotPassword.xhtml"></view-id>
    </url-mapping>
    <url-mapping>
        <pattern value="/forgotAnswer"></pattern>
        <view-id value="/forgotAnswer.xhtml"></view-id>
    </url-mapping>
</pretty-config>